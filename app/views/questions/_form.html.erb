<%= form_for @question, :html => { :class => 'form-horizontal' } do |f| %>
	<!-- Stub.  This functionality will be deferred to edX -->
    <div class="control-group">
		<div class="control-label"	
    		<label> Question </label>
    	</div>
    	<div class="controls">
    		<textarea name="xml" placeholder="<%= @question.xml if @question %>" >
            </textarea>
    	</div>
    </div>
    <div class="control-group">
		<div class="control-label">	
    		<label> Tag </label>
    	</div>
    	<div class="controls">
    		<select name="tag">
    			<% @tags.each do |tag| %>
    			<option> <%= tag.name %> </option>
    			<% end %>
    		</select>
    	</div>
    </div>
    <!-- TODO If not taken care of by edX, this form should allow a user to add a new tag as well. -->
    <input type="hidden" name="user_id" value=<%="#{current_user.id}"%> />
    <div class="new-or-edit-question form-actions">
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questions_path, :class => 'btn pull-right' %>
      <%= f.submit nil, :class => 'btn btn-primary pull-left' %>
    </div>
<% end %>
