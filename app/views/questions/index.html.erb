<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th> Question </th>
      <th> Tag </th>
      <th> Created </th>
      <!--<th><%=t '.actions', :default => t("helpers.actions") %></th>-->
    </tr>
  </thead>
  <tbody>
    <% if @questions %>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.xml, question_path(question) %></td>
        <td><%= question.tags[0].name if question.tags[0] %></td>
        <td><%= question.created_at.strftime("%B %d, %Y") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_question_path(question), :class => 'btn btn-mini' %>
          <%= link_to 'Delete',
                      question_path(question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete this question?')) },
                      :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>


