.modal{:id => "role-options-#{user.id}", :style => "display: none;"}
  = simple_form_for user, :url => user_path(user), :html => {:method => :put, :class => 'form-horizontal' } do |f|
    .modal-header
      %a.close{"data-dismiss" => "modal"} Ã—
      %h3 Change Role
    .modal-body
      = f.input :role_ids, :collection => User.find(1).roles.where(:resource_type => nil), :as => :check_boxes, :label_method => lambda {|t| t.name.titleize}, :label => false
    .modal-footer
      = f.submit "Change Role", :class => "btn"
      %a.btn{"data-dismiss" => "modal", :href => "#"} Close
